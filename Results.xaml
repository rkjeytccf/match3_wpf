      xmlns:local="clr-namespace:finalKursach"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Results">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\rugug\source\repos\3 сем\finalKursach\img\background\levels3.jpg"/>
