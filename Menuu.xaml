<Window x:Class="finalKursach.Menuu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finalKursach"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        d:DesignHeight="1080" d:DesignWidth="1920"
        Title="MainWindow" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\images\levels.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Width="300" Height="100" Content="PLAY" Style="{DynamicResource RoundCorners}" Click="Button_Click" FontSize="48" FontFamily="Candara Light" />
                <Button Width="300" Margin="20" Height="100" Content="SETTINGS" Style="{DynamicResource RoundCorners}" Click="Button_Click_1" FontSize="48" FontFamily="Candara Light" />
                <Button Width="300" Height="100" Content="EXIT" Style="{DynamicResource RoundCorners}" Click="Button_Click3" FontSize="48" FontFamily="Candara Light" />
            </StackPanel>
        </Grid>

        <Frame x:Name="Levels"/>
    </Grid>
</Window>
